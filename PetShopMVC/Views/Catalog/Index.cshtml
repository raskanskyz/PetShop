@model IEnumerable<PetShopMVC.Models.AnimalViewModel>

@{
    ViewBag.Title = "Catalog";
}

<h2>Animals Catalog</h2>

<div class="row">
    <div class="col-md-12">
        <table class="table table-bordered table-striped table-responsive table-condensed">
            <thead>
                <tr>
                    <th><strong>portrait</strong></th>
                    <th><strong>name</strong></th>
                    <th><strong>find out more and comment</strong></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
            {
                    <tr>
                        <td><img src="@item.PictureName" class="img-responsive thumbnail" /></td>
                        <td><p>@item.Name</p></td>
                        <td>@Ajax.ActionLink("get details", "AnimalDetails", "Catalog", new { animalId = item.AnimalId} ,new AjaxOptions()
                       {

                       }, new {@class ="btn btn-primary", @id = item.AnimalId})</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>